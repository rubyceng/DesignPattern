{
  "compilerOptions": {
    "target": "es6", // 编译为 ES6 代码
    "module": "commonjs", // 使用 CommonJS 模块系统
    "outDir": "./dist", // 编译输出目录
    "rootDir": "./src", // 源文件目录
    "strict": true, // 启用所有严格类型检查选项
    "esModuleInterop": true // 允许默认导入非 ES 模块
  },
  "include": ["src/**/*"], // 包含的文件
  "exclude": ["node_modules"] // 排除的文件夹
}
